MainWidget:

<MainWidget>:
    orientation: "vertical"
    play_button: play_button
    resume_button: resume_button
    stop_button: stop_button
    plus_button: plus_button
    minus_button: minus_button
    Widget:
        size_hint_y: None
        height: dp(10)
    BoxLayout:
        size_hint_y: None
        height: dp(40)
        pos_hint: {"center_y":0.5}
        Button:
            id: minus_button
            text: "-"
            on_press: root.remove_player()
        Label:
            text: str(root.nb_joueurs)
        Button:
            id: plus_button
            text: "+"
            on_press: root.add_player()
    Widget:
        size_hint_y: None
        height: dp(10)
    BoxLayout:
        orientation: "vertical"
        Button:
            id: play_button
            text: "PLAY"
            disabled: True
            on_press: root.press_play()
            size_hint: None, None
            width: dp(100)
            height: dp(30)
            pos_hint: {'center_x':0.5,'top':1}
        Widget:
            size_hint_y: None
            height: dp(10)
        BoxLayout:
            pos_hint: {'center_x':0.5,'top':1}
            size_hint: None, None
            width: dp(200)
            height: dp(30)
            Button:
                id: resume_button
                disabled: True
                text: "RESUME"
                on_press: root.press_resume()
            Button:
                id: stop_button
                disabled: True
                text: "STOP"
                on_press: root.press_stop()
        Label:
            valign: "bottom"
            text: root.selected_song_tag

<FileChoosePopup>:
    title: "Choose a .CSV File"
    size_hint: .9, .9
    auto_dismiss: False
    BoxLayout:
        orientation: "vertical"
        FileChooser:
            id: filechooser
            path: root.DEFAULT_PATH
            dirselect: True
            FileChooserIconLayout

        BoxLayout:
            size_hint: (1, 0.1)
            pos_hint: {'center_x': .5, 'center_y': .5}
            spacing: 20
            Button:
                text: "Cancel"
                on_release: root.dismiss()
            Button:
                text: "Load"
                on_release: root.load(filechooser.selection[0])
                id: ldbtn
                disabled: True if filechooser.selection==[] else False

